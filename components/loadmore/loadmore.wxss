@keyframes loadmore{
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.loadmore-container view {
  font-size: 14px;
  color: #333;
}
.loadmore-common {
  display: flex;
  justify-content: center;
  align-items: center;
}
.loadmore-container>.loading {
  padding: 10px 0;
}
.loadmore-container>.loading>.loading-img {
  margin-right: 4px;
  display: inline-block;
  width: 20px;
  height: 20px;
  animation: loadmore 1s steps(12, end) infinite;
  background: url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.loadmore-container>.loading>.loading-text {
  line-height: 20px;
}
.loadmore-container>.underline>.line {
  padding: 10px 0;
}
.loadmore-container>.underline>.line::before, .loadmore-container>.underline>.line::after {
  content: "";
  display: block;
  width: 40px;
  height: 1px;
  background-color: #bbb;
  transform: scaleY(.5);
}
.loadmore-container>.underline>.line::before {
  margin-right: 10px;
}
.loadmore-container>.underline>.line::after {
  margin-left: 10px;
}
.loadmore-container>.nodata-wrap {
  position: relative;
}
.loadmore-container>.nodata-wrap>.nodata {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.loadmore-container>.nodata-wrap>.nodata-img {
  margin-bottom: 20px;
}